{
  "name": "rollup-vue-template",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c rollup.config.js && cp app/index.html dist/",
    "watch": "rollup -c rollup.config.js --watch",
    "rebuild": "yarn clean && yarn build",
    "clean": "rm -rf dist",
    "lint": "eslint app/**/*.js",
    "lint:css": "stylelint '**/*.less' '**/*.vue' --syntax less",
    "lint:watch": "esw app/*.js app/**/*.vue -w --color --clear",
    "test": "jasmine",
    "e2e": "cypress run -C false --config video=false,integrationFolder=app,supportFile=false,pluginsFile=false,testFiles=**/*.spec.js"
  },
  "dependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^9.7.4",
    "brotli": "^1.3.2",
    "cssnano": "^4.1.10",
    "livereload": "^0.9.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-nested": "^4.2.1",
    "postcss-remove-unused-css": "^1.0.4",
    "postcss-simple-vars": "^5.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-gzip": "^2.3.0",
    "rollup-plugin-livereload": "^1.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-replace": "^2.1.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-vue": "^5.1.6",
    "rollup-watch": "^4.3.1",
    "vue-hot-reload-api": "^2.3.4",
    "vue-template-compiler": "^2.6.11"
  },
  "optionalDependencies": {
    "@vue/test-utils": "^1.0.0-beta.32",
    "babel-eslint": "^10.1.0",
    "cypress": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^6.2.2",
    "eslint-watch": "^6.0.1",
    "husky": "^4.2.3",
    "jasmine": "^3.5.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-processor-html": "^1.0.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/transform-runtime"
    ]
  },
  "browserslist": [
    ">0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.spec.js",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 1
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
